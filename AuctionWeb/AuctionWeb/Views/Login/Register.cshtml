@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/FrontMaster.cshtml";
}
@section scripts{
       <script>
           function submit() {
               if (!check())
                   return false;
               var password = document.getElementById("Password").value;
               var pwd = document.getElementById("pwd").value;
               if (password != pwd) {
                   alert("两次输入密码不一致");
                   return false;
               }
               var myform = document.getElementById("message");
               myform.submit();
           }
       </script>
    }
<div class="positions"><h1>注册</h1></div>
<div class="content">
    <form id="message" action="/Login/Register" method="post">
        <div class="messList">
            <label>用户名：</label><input type="text" id="Username" title="请输入用户名" name="Username" class="inputWidth" />
        </div>
        <div class="messList">
            <label>密码：</label><input type="password" id="Password"  name="Password" class="inputWidth" />
        </div>
        <div class="messList">
            <label>确认密码：</label><input type="password" id="pwd" name="pwd" class="inputWidth" />
        </div>
        <div class="messList">
            <label>姓名：</label><input type="text" id="TrueName" title="请输入姓名" name="TrueName" class="inputWidth" />
        </div>
        <div class="messList">
            <label>电话：</label><input type="tel" id="Telephone" name="Telephone" class="inputWidth" />
        </div>
        <div class="messList">
            <label>身份证号码：</label><input type="email" id="IdNum" title="请输入身份证号码" name="IdNum" class="inputWidth" />
        </div>
        <div class="messList">
            <label>联系地址：</label><input type="text" title="请输入联系地址" id="Address" name="Address" class="inputWidth" />
        </div>
    </form>
    <div style="margin-right:140px" class="mes">
        <input type="button" onclick="submit()" value="提 交" />
    </div>
</div>
